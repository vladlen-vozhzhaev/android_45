<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthFragment">

    <View
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/left_circle"
        />
    <View
        android:background="@drawable/small_circle"
        android:layout_height="26dp"
        android:layout_width="26dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="280dp"
        />
    <View
        android:background="@drawable/right_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="-30dp"
        android:layout_gravity="right"
        android:layout_marginTop="-70dp"
        />
    <View
        android:background="@drawable/small_circle"
        android:layout_height="26dp"
        android:layout_width="26dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="24dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:paddingBottom="80dp"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <TextView
            android:text="Регистрация"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/openAuthFragmentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="20dp"
            android:text="Авторизоваться"
            />
        <EditText
            android:paddingStart="10dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/nameRegEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:hint="Имя"/>
        <EditText
            android:paddingStart="10dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/lastnameRegEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:hint="Фамилия"/>
        <EditText
            android:paddingStart="10dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/loginRegEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:hint="Логин"/>
        <EditText
            android:paddingStart="10dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/passRegEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:hint="Пароль" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regBtn"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_lime"
            android:text="Зарегистрироваться"
            android:textColor="#FFF"
            />
    </LinearLayout>

</LinearLayout>